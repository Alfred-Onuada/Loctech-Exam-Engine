<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/login.css">
<link rel="stylesheet" href="/stylesheets/formStyle.css">

<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <img src="images/loctech.png" alt="" class="company-logo">
                <h2>Online Exam Portal</h2>
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Staff</h5>
                    <small class="text-muted">Sign in to start adding questions</small>
                    <form action="/staff/login" method="POST" class="mt-2 validated-form go-bottom" novalidate>
                        <div class="mb-3">
                            <input class="form-control" type="text" id="username" name="username" placeholder="Username" autofocus required>
                            <label for="username">Username</label>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
                            <label for="password">Password</label>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Signin <i class="fas fa-sign-in-alt"></i></button>
                          </div>
                    
                    </form>
                </div>
            </div>
 
            <p class="mt-2 text-muted text-center footer-text">&copy; 2021 Loctech Online Exam Software</p>
            <p class="text-muted text-center footer-text">Not Registered? <a href="/staff/register" class="fw-bold login-register-link">Signup</a></p>
        </div>
    </div>
</div>